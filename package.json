{
  "name": "npm_scripts_boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "Greg Rickaby <greg@gregrickaby.com>",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/gregrickaby/npm-scripts-boilerplate.git"
  },
  "keywords": [
    "npm",
    "scripts",
    "npm scripts",
    "watch",
    "minify",
    "compress"
  ],
  "bugs": {
    "url": "https://github.com/gregrickaby/npm-scripts-boilerplate/issues"
  },
  "homepage": "https://github.com/gregrickaby/npm-scripts-boilerplate#readme",
  "main": "src/js/app.js",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "eslint": "^6.1.0",
    "jquery": "3.3.1",
    "lodash": "^4.17.15",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "posthtml": "^0.11.6",
    "posthtml-cli": "^0.5.1",
    "posthtml-modules": "^0.4.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.23.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "uglify-es": "^3.3.9"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src/js || true",
    "rollup": "rollup -c",
    "serve": "browser-sync start --config browser-sync.js",
    "build:js": "run-s lint rollup",
    "build:html": "posthtml -c .posthtmlrc",
    "build": "run-s clean build:*",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch:html": "onchange \"src/**/*.html\" -- run-s build:html",
    "start": "npm run build && run-p serve watch:*",
    "postinstall": "run-s build"
  },
  "browserslist": [
    "defaults"
  ],
  "eslintConfig": {
    "extends": "eslint:recommended"
  },
  "stylelint": {
    "extends": "stylelint-config-recommended"
  },
  "dependencies": {
    "lit-html": "^1.2.1"
  }
}
